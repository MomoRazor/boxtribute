{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* imports are relative to the src/ directory */
    "baseUrl": "src",

    /* Building */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    /* only use typescript for type checking */
    "noEmit": true
  },
  "include": ["src"]
}
